<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows7.0</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Shader\**" />
    <EmbeddedResource Remove="Shader\**" />
    <None Remove="Shader\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Reactive" Version="5.0.0" />
    <PackageReference Include="System.Reactive.Linq" Version="5.0.0" />
    <PackageReference Include="System.Text.Json" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DirectXTexWrapper\DirectXTexWrapper.vcxproj" />
    <ProjectReference Include="..\Engine\Engine.csproj" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="if not exist $(TargetDir)\Resources mkdir $(TargetDir)\Resources&#xD;&#xA;if not exist $(TargetDir)\Resources\SponzaTexture mkdir $(TargetDir)\Resources\SponzaTexture&#xD;&#xA;if not exist $(TargetDir)\Resources\ObjMesh mkdir $(TargetDir)\Resources\ObjMesh&#xD;&#xA;if not exist $(TargetDir)\Resources\Shader mkdir $(TargetDir)\Resources\Shader&#xD;&#xA;if not exist $(TargetDir)\Resources\Cubemap mkdir $(TargetDir)\Resources\Cubemap&#xD;&#xA;if not exist $(TargetDir)\Resources\Font mkdir $(TargetDir)\Resources\Font&#xD;&#xA;if not exist $(TargetDir)\Resources\Fonts mkdir $(TargetDir)\Resources\Fonts&#xD;&#xA;if not exist $(TargetDir)\Resources\Texture mkdir $(TargetDir)\Resources\Texture&#xD;&#xA;if not exist $(TargetDir)\Resources\$(PlatformName) mkdir $(TargetDir)\Resources\$(PlatformName)&#xD;&#xA;xcopy /D /Y /S $(ProjectDir)\Resources $(TargetDir)\Resources&#xD;&#xA;&#xD;&#xA;xcopy /D /Y /S $(ProjectDir)\Shader $(TargetDir)\Resources\Shader&#xD;&#xA;&#xD;&#xA;xcopy /F /Y /S $(SolutionDir)\NVIDIATextureToolsExporter\nvtt_export.exe $(TargetDir)&#xD;&#xA;xcopy /F /Y /S $(SolutionDir)\NVIDIATextureToolsExporter\FreeImage.dll $(TargetDir)&#xD;&#xA;" />
  </Target>

</Project>